<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Registration.LoginActivity">


    <ImageView
        android:id="@+id/bg"
        android:layout_width="518dp"
        android:layout_height="811dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/registration_page" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle_8" />

    <ImageView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/imageView"
        app:layout_constraintStart_toStartOf="@id/imageView"
        app:layout_constraintTop_toTopOf="@id/imageView"
        app:srcCompat="@drawable/welcome"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="85dp" />

    <ImageView
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/register_box"
        app:layout_constraintTop_toBottomOf="@+id/getstarted"
        app:srcCompat="@drawable/login_account" />

    <ImageView
        android:id="@+id/getstarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="@+id/register_box"
        app:layout_constraintTop_toBottomOf="@+id/welcome"
        app:srcCompat="@drawable/get_started_text" />

    <ImageView
        android:id="@+id/email_register_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="@+id/register_box"
        app:layout_constraintTop_toBottomOf="@+id/username_icon"
        app:srcCompat="@drawable/email" />

    <ImageView
        android:id="@+id/password_register_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="@+id/register_box"
        app:layout_constraintTop_toBottomOf="@+id/email_register_icon"
        app:srcCompat="@drawable/pass" />

    <ImageView
        android:id="@+id/passwordrepeat_register_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="@+id/register_box"
        app:layout_constraintTop_toBottomOf="@+id/password_register_icon"
        app:srcCompat="@drawable/rep" />

    <ImageView
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/register_box"
        app:layout_constraintEnd_toEndOf="@+id/register_box"
        app:layout_constraintStart_toStartOf="@+id/register_box"
        app:srcCompat="@drawable/signup" />

    <ImageView
        android:id="@+id/username_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/register_box"
        app:layout_constraintTop_toBottomOf="@+id/login_btn"
        app:srcCompat="@drawable/username" />

    <ImageView
        android:id="@+id/register_box"
        android:layout_width="200dp"
        android:layout_height="243dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/welcome"
        app:srcCompat="@drawable/form" />

    <EditText
        android:id="@+id/username_register"
        android:layout_width="180dp"
        android:layout_height="18dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        android:background="@android:color/transparent"
        android:hint="Username"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/username_icon"
        app:layout_constraintStart_toStartOf="@+id/register_box" />

    <EditText
        android:id="@+id/email_register"
        android:layout_width="180dp"
        android:layout_height="18dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        android:background="@android:color/transparent"
        android:hint="Email"
        android:autofillHints="emailAddress"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/email_register_icon"
        app:layout_constraintStart_toStartOf="@+id/register_box" />

    <EditText
        android:id="@+id/password_register"
        android:layout_width="180dp"
        android:layout_height="18dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        android:background="@android:color/transparent"
        android:textSize="12sp"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/password_register_icon"
        app:layout_constraintStart_toStartOf="@+id/register_box" />

    <EditText
        android:id="@+id/password_register_repeat"
        android:layout_width="180dp"
        android:layout_height="18dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        android:background="@android:color/transparent"
        android:textSize="12sp"
        android:hint="Repeat Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="@+id/passwordrepeat_register_icon"
        app:layout_constraintStart_toStartOf="@+id/register_box" />

</androidx.constraintlayout.widget.ConstraintLayout>