<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        app:srcCompat="@drawable/search_body" />

    <com.nex3z.flowlayout.FlowLayout
        android:id="@+id/interests"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_name"
        android:layout_marginStart="6dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="-113dp"
        android:layout_toEndOf="@+id/result_image"
        app:flChildSpacing="11dp"
        app:flChildSpacingForLastRow="align"
        app:flFlow="true"
        app:flMaxRows="2"
        app:flRowSpacing="1dp"
        app:layout_constraintHorizontal_bias="0.6">


        <ImageView
            android:id="@+id/psychology"
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:visibility="visible"
            app:srcCompat="@drawable/psychology" />

        <ImageView
            android:id="@+id/business"
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:visibility="visible"
            app:srcCompat="@drawable/bussiness" />

        <ImageView
            android:id="@+id/tennis"
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:visibility="visible"
            app:srcCompat="@drawable/tennis" />

        <ImageView
            android:id="@+id/writing"
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:layout_weight="1"
            android:visibility="visible"
            app:srcCompat="@drawable/writing" />

        <ImageView
            android:id="@+id/blogging"
            android:layout_width="50dp"
            android:layout_height="15dp"
            android:visibility="visible"
            app:srcCompat="@drawable/blogging" />
    </com.nex3z.flowlayout.FlowLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/result_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/result_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView6"
        android:layout_alignParentTop="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_medium"
        android:text="name"
        android:textColor="#000000"
        android:textSize="13sp" />
</RelativeLayout>